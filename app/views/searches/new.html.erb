<h1>Advanced Search<h1>

  <%= form_for @search do |f| %>
    <div class = "field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class = "field">
      <%= f.label :director %><br />
      <%= f.text_field :director %>
    </div>
    <div class = "field">
      <%= f.label :runtime_in_minutes, "duration" %><br />
      <select>
        <option value = "<90">under 90 minutes</option>
        <option value = "90-120">between 90 and 120 minutes</option>
        <option value = ">120">over 120 minutes</option>
      </select>
    </div>
    <div class= "actions"><%= f.submit "Search" %></div>
  <% end %>
