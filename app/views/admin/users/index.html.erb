<div class = "row">
  <div class="small-4 medium-4 large-4 columns">
    <h3>Admin Management</h3>
    <%=link_to "Create a new user", new_admin_user_path %>
  </div>
</div>

<div class = "row">
  <div class="small-4 medium-4 large-4 columns">
  <h5>Users List</h5>
  <%= paginate @users %>
  <table>
    <tr>
      <td> Firstname </td>
      <td> Lastname </td>
      <td> Email </td>
      <td> UserID </td>
      <td> Edit</td>
      <td> Admin </td>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <td><%= user.id %></td>
      <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
      <td><%= link_to "Delete", admin_user_path(user), method: :delete, confirm: "Are you sure?" %></td>
      <td><% if user.admin %>
            (admin)
          <% end %>
      </td>
      </tr>
    <% end %>
  </table>
  </div>
</div>
<br>






