<div class="small-2 medium-2 large-2 columns">
  <%= link_to " Back to movie", movie_path(@movie) %>
</div>
<br>
<div class = "row">
  <div class="small-5 small-centered medium-5 medium-centered large-5 large-centered columns">
    <h3>Write a review of <strong><%= @movie.title %></strong></h3>
  </div>
</div>

<%= form_for([@movie, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div>
      <%= pluralize(@review.errors.count, "error") %> prevented the review from being saved:
      <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "row">
    <div class="small-5 small-centered medium-5 medium-centered large-5 large-centered columns">
      <%= f.label "Review" %>
      <%= f.text_area "text" %>
    </div>
  </div>
  <div class = "row">
    <div class="small-5 small-centered medium-5 medium-centered large-5 large-centered columns">
      <%= f.label "rating_out_of_ten" %>
      <%= f.number_field "rating_out_of_ten" %>
    </div>
  </div>
  <div class = "row">
    <div class="small-5 small-centered medium-5 medium-centered large-5 large-centered columns">
      <%= submit_tag("Submit", :class => "small button radius") %>
    </div>
  </div>
<% end %>
