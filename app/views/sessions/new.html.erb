<div class = "row">
  <div class="small-4 medium-4 large-4 columns">
    <h3>Log In</h3>
  </div>
</div>

<%= form_tag sessions_path do %>
  <div class = "row">
    <div class="small-4 medium-4 large-4 columns">
      <%= label_tag "email" %><br/>
      <%= text_field_tag "email" %>
    </div>
  </div>
  <div class = "row">
    <div class="small-4 medium-4 large-4 columns">
      <%= label_tag :password %><br/>
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class = "row">
    <div class="small-4 medium-4 large-4 columns">
      <%= submit_tag("Log In", :class => "button") %>
    </div>
  </div>
<% end %>
<br>
